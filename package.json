{
    "name": "@globuslimited/translation",
    "version": "0.9.1",
    "description": "Hooks for handling translation",
    "repository": "git@github.com:globuslimited/globus-translation.git",
    "author": "Andrei izotov <faradaytrs@gmail.com>",
    "license": "MIT",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "tsc",
        "release": "set -a && source .env && set +a && release-it",
        "test": "jest",
        "prepare": "install-peers"
    },
    "peerDependencies": {
        "ramda": "^0.27.1",
        "react": "^17.0.2"
    },
    "devDependencies": {
        "@testing-library/react-hooks": "^7.0.1",
        "@types/jest": "^27.0.0",
        "@types/ramda": "^0.27.44",
        "@types/react": "^17.0.15",
        "install-peers-cli": "^2.2.0",
        "jest": "^27.0.6",
        "react-test-renderer": "^17.0.2",
        "release-it": "^14.10.1",
        "ts-jest": "^27.0.4",
        "typescript": "^4.3.5"
    },
    "release-it": {
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireBranch": "main"
        },
        "github": {
            "release": true,
            "proxy": "http://127.0.0.1:7890"
        },
        "npm": {
            "publish": false
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "semi": true,
        "quoteProps": "as-needed"
    }
}
