{
    "name": "react-t9n",
    "version": "4.0.5",
    "description": "React-style library for handling translation",
    "repository": "git@github.com:globuslimited/react-t9n",
    "author": "Andrei izotov <faradaytrs@gmail.com>",
    "license": "MIT",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "tsc && esbuild `find './src' \\( -name '*.ts' \\)` --sourcemap=external --outdir=dist",
        "release": "set -a && source .env && set +a && release-it",
        "test": "vitest",
        "coverage": "vitest run --coverage"
    },
    "peerDependencies": {
        "ramda": "^0.28",
        "react": "^17.0 || ^18.0"
    },
    "devDependencies": {
        "@testing-library/react-hooks": "8.0.0",
        "@types/ramda": "0.28.12",
        "@types/react": "18.0.9",
        "c8": "7.11.3",
        "esbuild": "0.14.39",
        "ramda": "0.28.0",
        "react": "18.1.0",
        "react-test-renderer": "18.1.0",
        "release-it": "15.0.0",
        "typescript": "4.6.4",
        "vitest": "0.12.9"
    },
    "release-it": {
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireBranch": "main"
        },
        "github": {
            "release": true
        },
        "npm": {
            "publish": false
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "semi": true,
        "quoteProps": "as-needed"
    }
}
