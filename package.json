{
    "name": "react-t9n",
    "version": "2.0.3",
    "description": "React-style library for handling translation",
    "repository": "git@github.com:globuslimited/globus-translation.git",
    "author": "Andrei izotov <faradaytrs@gmail.com>",
    "license": "MIT",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "tsc",
        "release": "set -a && source .env && set +a && release-it",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "prepare": "install-peers"
    },
    "peerDependencies": {
        "ramda": "^0.27.1",
        "react": "^17.0.2"
    },
    "devDependencies": {
        "@testing-library/react-hooks": "^7.0.2",
        "@types/jest": "^27.0.3",
        "@types/ramda": "^0.27.50",
        "@types/react": "^17.0.36",
        "install-peers-cli": "^2.2.0",
        "jest": "^27.3.1",
        "react-test-renderer": "^17.0.2",
        "release-it": "^14.11.8",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2"
    },
    "release-it": {
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireBranch": "main"
        },
        "github": {
            "release": true
        },
        "npm": {
            "publish": false
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "semi": true,
        "quoteProps": "as-needed"
    }
}
