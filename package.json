{
    "name": "@globuslimited/translation",
    "version": "0.5.0",
    "description": "Hooks for handling translation",
    "repository": "git@github.com:globuslimited/globus-translation.git",
    "author": "Andrei izotov <faradaytrs@gmail.com>",
    "license": "MIT",
    "private": false,
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "scripts": {
        "build": "tsc",
        "release": "release-it"
    },
    "dependencies": {
        "ramda": "^0.27.1",
        "react": "^17.0.2"
    },
    "devDependencies": {
        "@types/ramda": "^0.27.40",
        "@types/react": "^17.0.3",
        "release-it": "^14.6.1",
        "typescript": "^4.2.4"
    },
    "release-it": {
        "git": {
            "commit": true,
            "tag": true,
            "push": true,
            "requireBranch": "main"
        },
        "github": {
            "release": true,
            "proxy": "http://127.0.0.1:7890"
        },
        "npm": {
            "publish": false
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid",
        "semi": true,
        "quoteProps": "as-needed"
    }
}
